<%- include('header') %>

<div id="main-contact">
    <div class="container-form">
        <form>
            <h1>Get In Touch</h1>
            <input type="hidden" name="access_key" value="c3caaf24-7c60-4d16-a209-93e94b7046b2">
            <label for="fname">First Name</label>
            <input class="item" type="text" id="fname" name="firstname" placeholder="Your name..">
        
            <label for="lname">Last Name</label>
            <input class="item" type="text" id="lname" name="lastname" placeholder="Your last name..">
        
            <label for="email">Email</label>
            <input class="item" type="email" id="email" name="email" placeholder="Your email address..">

            <label for="message">Message</label>
            <textarea class="item" name="message" id="message" cols="30" rows="10" placeholder="Your message: "></textarea>

            <label for="subject">Subject</label>
            <input class="item" type="text" name="subject" id="subject" placeholder="enter subject">
        
            
        
            <input type="submit"  value="Submit" id="submitFormBtn">
          </form>
    </div>
</div>

